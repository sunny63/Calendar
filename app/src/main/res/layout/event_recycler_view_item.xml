<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textEventName" android:textSize="14sp"
            android:textColor="#000000" android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp" android:layout_marginVertical="5dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/view" android:background="#F44336"/>
</LinearLayout>